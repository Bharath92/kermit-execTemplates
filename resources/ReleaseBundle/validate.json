{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jfrog.com/cicd/steps/step.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["ReleaseBundle"]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "sourceDistribution": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "isSigned": {
          "type": "boolean"
        }
      },
      "required": ["name", "version", "sourceDistribution"]
    }
  },
  "required": ["name", "type", "configuration"]
}
