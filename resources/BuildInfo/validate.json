{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jfrog.com/cicd/steps/step.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["BuildInfo"]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "sourceArtifactory": {
          "type": "string"
        },
        "buildNumber": {
          "type": "integer"
        },
        "buildName": {
          "type": "string"
        }
      },
      "required": ["buildNumber", "buildName"]
    }
  },
  "required": ["name", "type", "configuration"]
}
