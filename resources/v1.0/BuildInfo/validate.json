{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://jfrog.com/pipelines/resources/BuildInfo.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["BuildInfo"]
    },
    "configuration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sourceArtifactory": {
          "type": "string"
        },
        "buildNumber": {
          "type": "integer"
        },
        "buildName": {
          "type": "string"
        }
      },
      "required": ["sourceArtifactory", "buildNumber", "buildName"]
    }
  },
  "required": ["name", "type", "configuration"]
}
